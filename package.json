{
  "name": "smart-components-dinkar-monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "npm install",
    "dev": "concurrently \"npm run watch --workspace=packages/library\" \"npm run start --workspace=packages/app\"",
    "start": "npm run dev",
    "build": "npm run build --workspaces",
    "build:lib": "npm run build --workspace=packages/library",
    "build:app": "npm run build --workspace=packages/app",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "concurrently": "8.0.0"
  }
}
