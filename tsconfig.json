{
    "compilerOptions": {
        "target": "ES2020",
        "typeRoots": ["node_modules/@types"],
        "jsx": "react",
        "module": "ES2020",
        "moduleResolution": "Node16",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "strict": true,
        "noImplicitAny": true,
        "allowJs": true,
        "checkJs": false,
        "skipLibCheck": true,
        "noEmit": false,
        "incremental": true,
        "isolatedModules": true,
        "declaration": true,
        "baseUrl": "./",
        "paths": {
            "*": ["src/*"]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        ".eslintrc.js",
        ".stylelintrc.js"
    ],
    "exclude": [
        "node_modules",
        "./dist/**/*"
    ]
}